{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "screen-share-demo",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true,
        "startDragging": true,
        "setAlwaysOnTop": true
      }
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "overlay1",
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": true,
        "width": 500,
        "height": 500
      },
      {
        "label": "overlay2",
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": true,
        "width": 400,
        "height": 400
      }
    ]
  }
}
